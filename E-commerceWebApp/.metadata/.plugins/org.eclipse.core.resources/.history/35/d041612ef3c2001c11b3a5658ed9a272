<script type="text/javascript">
$(document).ready(function(){
	$(".link-delete").on("click",function(e){
		e.preventDefault();
		link=$(this);
		$("#yesbtn").attr("href",link.attr("href"));
		$("#confirmModel").modal();
	});
});
